!!!
%html
  %head
    %title GoatHub : Your GitHub News Feed, Digested
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults 
    = csrf_meta_tag
  %body
    .wrap
      .head
        .nav
          - if session[:user_id]
            = link_to "My Feed", news_feed_path(User.find_by_id(session[:user_id]).news_feed)
            |

            = link_to "Log Out", logout_path, {:method => 'delete'}
          - else
            = link_to "Sign Up", new_user_path
            |
            = link_to "Login", login_path
        = link_to root_path do
          %h1 GoatHub
      .content
        = yield
